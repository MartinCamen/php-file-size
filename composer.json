{
  "name": "martincamen/php-file-size",
  "description": "Base PHP SDK",
  "keywords": [
    "php",
    "sdk"
  ],
  "homepage": "https://github.com/martincamen/php-file-size",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Camen",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "pestphp/pest": "^4.2",
    "phpstan/phpstan": "^2.0",
    "rector/rector": "^2.2",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "MartinCamen\\PhpFileSize\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MartinCamen\\PhpFileSize\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": "./vendor/bin/pint --diff=main --test",
    "format-fix": "./vendor/bin/pint",
    "analyse": "./vendor/bin/phpstan analyse",
    "test": "./vendor/bin/pest",
    "rector": "./vendor/bin/rector process --dry-run",
    "rector-fix": "./vendor/bin/rector process",
    "check": [
      "@analyse",
      "@test",
      "@format",
      "@rector"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
